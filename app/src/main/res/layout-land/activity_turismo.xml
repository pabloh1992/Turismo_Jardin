<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/paleturquoise"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textAppearance="@style/mifuente"
            android:text="@string/opcion"
            android:textSize="20dp"
            android:layout_weight="1.8"/>

        <Spinner
            android:id="@+id/turismo_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:textAppearance="@style/mifuente"
            android:layout_weight="1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/turismo"
        android:textColor="@color/darkblue"
        android:textAppearance="@style/mifuente2"
        android:id="@+id/txtturismo"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"

                android:layout_height="160dp"
                android:id="@+id/imagen1_turismo" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_height="160dp"
                android:id="@+id/imagen2_turismo"/>
            <!--         android:layout_height="79dp" -->



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="320dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="60dp"
                android:textAppearance="@style/mifuente"
                android:id="@+id/txtinfo"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>